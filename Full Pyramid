Enter no of rows - 7
      *
     ***
    *****
   *******
  *********
 ***********
*************





/-------------------------------------------------------/
// Online C++ compiler to run C++ program online
#include <iostream>
using namespace std;
int main() {
    int n;
    cout<<"Enter no of rows - ";
    cin>>n;
    int k = n;
    
    for(int row=0;row<n;row++){
        for(int col=0;col<k;col++){
           if(col < n-row-1){
               cout<<" ";
           }
           else{
               cout<<"*";
           }
        }
        k++;
        cout<<endl;
         
    }
 
    return 0;
}
